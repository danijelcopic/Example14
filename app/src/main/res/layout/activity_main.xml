<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Declares a button that starts 2nd activity -->
    <Button
        android:id="@+id/start_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher"
        android:onClick="btnStartActivityClicked"
        android:text="@string/start_activity" />

    <!-- Declares a button that opens a browser -->
    <Button
        android:id="@+id/open_browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher"
        android:onClick="btnOpenBrowserClicked"
        android:text="@string/open_browser" />

</LinearLayout>